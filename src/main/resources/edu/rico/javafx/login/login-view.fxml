<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.rico.javafx.login.LoginController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <GridPane fx:id="gridPane" hgap="10" vgap="10">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
    </columnConstraints>

    <Label fx:id="nombreL" text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nombreT" promptText="Ingrese su nombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label fx:id="passwordL" text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordT" promptText="Ingrese su contraseÃ±a" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button fx:id="_loginButton" onAction="#manageLogin" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" mnemonicParsing="_Login" alignment="CENTER">Login</Button>
  </GridPane>
</VBox>

