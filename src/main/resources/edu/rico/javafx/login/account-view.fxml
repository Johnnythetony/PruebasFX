<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="edu.rico.javafx.login.Controllers.WelcomeView"
           prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20">
        <Label fx:id="welcometext" alignment="TOP_CENTER"/>
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <Label fx:id="usernameL" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="usernameT" promptText="Nuevo nombre de usuario" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label fx:id="nameL" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="nameT" promptText="Nuevo nombre" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label fx:id="surnameL" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="surnameT" promptText="Nuevo apellido" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label fx:id="emailL" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="emailT" promptText="Nuevo email" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label fx:id="birth_dateL" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="birth_dateT" promptText="Nueva fecha de nacimiento" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label fx:id="passwordL" text="Password: ----------------" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <PasswordField fx:id="passwordT" promptText="Nueva contraseÃ±a" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label fx:id="feedbackL" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <Button fx:id="_backButton" onAction="#back" GridPane.columnIndex="0" GridPane.rowIndex="7">Cambiar cuenta</Button>
            <Button fx:id="_submitB" onAction="#submitChanges" GridPane.columnIndex="1" GridPane.rowIndex="7">Confirmar cambios</Button>
        </GridPane>
    </VBox>
</BorderPane>
